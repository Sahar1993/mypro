<html>
    <head>
        <meta charset="utf-8">
    </head>
    
    
    <body>
        <form>
       <label for="text1"> 1st Number:</label> 
       <input id="text1" type="text"> <br><br>
        
       <label for="text2"> 2nd Number:</label>
       <input id="text2" type="text"><br><br>
            
        <button onclick="Multiply()" value="Multiply"> Multiply</button>
        <button onclick="Division()" value="Division"> Division</button> <br> 
    </form>
            
    <p>the Result is : <br>
        <span id="result"></span> 
    </p>
        
        <script>
         var num1;
         var num2;

    function Multiply(){
        num1 =document.getElementById("text1").value;
        num2 =document.getElementById("text2").value;
        document.getElementById("result").innerHTML =num1*num2;
     
    }
    function Division(){
        num1 =document.getElementById("text1").value;
        num2 =document.getElementById("text2").value;
        document.getElementById("result").innerHTML = num1/num2;
    }
    </script>
      
    </body>
</html>